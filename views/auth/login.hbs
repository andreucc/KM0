<h1>Login</h1>

<form method="POST" action="/auth/login">

<div class="mainform">
  <div class="field" >
    <label>Username</label><br>
    <input type="text" name="username"/>
  </div>

  <div class="field" >
    <label>Password</label><br>
    <input type="password" name="password"/>
  </div>

  <div class="field submit">
    <button type="submit">Login</button>
  </div>
</div>

</form>
{{> flash }}