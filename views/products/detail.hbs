  <h3>{{producte.name}}</h3>
  <div>
    <p>Description: {{producte.description}}</p>
    <p>Available: {{producte.amount}} {{producte.units}}</p> 
    <p>Seller: {{producte.owner.username}}</p>
  </div>

  {{#if isOwner}}
  <a href="/product/{{producte._id}}/edit">Edit product</a>
  <a href="/product/{{producte._id}}/delete">Delete product</a>  
  {{else}}
  <a href="/product/{{producte._id}}/buy">Buy product</a>
  {{/if}}

